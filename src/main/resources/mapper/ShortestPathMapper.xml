<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.interfaces.ShortestPathDAO">
    <insert id="insertShortestPath" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO shortest_paths (id, previous_point, distance) VALUES (#{id}, #{previousPoint}, #{distance})
    </insert>
    <update id="updateShortestPath">
        UPDATE shortest_paths SET distance WHERE id = #{id}
    </update>
    <resultMap id="shortestPathsResult" type="org.example.model.ShortestPath">
        <result property="id" column="id"/>
        <result property="previousPoint" column="previous_point"/>
        <result property="distance" column="distance"/>
    </resultMap>
    <select id="getShortestPath" resultType="shortestPathsResult">
        SELECT id, previous_point, distance FROM shortest_paths WHERE id = #{id}
    </select>
</mapper>